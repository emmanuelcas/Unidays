@model UnidaysFront.Models.CreatedUser

@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New User</h1>


        @using (Html.BeginForm("AddUser", "Home"))
        {
            <div style="color:red;">@Html.ValidationSummary()</div>
            <div class="row">
                <!--Show details are saved successfully message-->
                <div class="col-lg-12">@ViewBag.Message</div>
            </div><br />

                  <div class="form-group">
                      <div class="row">
                          <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
                          <div class="col-lg-4">@Html.TextBoxFor(a => a.Email, new { @class = "form-control", autocomplete = "off", required = "true" })</div>
                      </div><br />
                      <div class="row">
                          <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
                          <div class="col-lg-4">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", autocomplete = "off", type = "Password", required = "true" })</div>
                      </div><br />
                  </div>


            <div class="form-group">
                <input type="submit" value="Add User" class="btn btn-default" />
            </div>
        }
